{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"module": "es2015",
		"target": "es2015",
		"moduleResolution": "node",
		"baseUrl": ".",
		"lib": [
			"es2015", "es2017", "dom"
		],
		"outDir": "./dist",
		"paths": {
			"react-pixi-fiber": ["./node_modules/react-pixi-fiber"]
		}
	},
	"include": [
		"src/**/*",
		"../../src/**/*"
	]
}